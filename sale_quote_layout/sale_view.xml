<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="layout_order_lines_form">
            <field name="name">layout.view.order.lines.form</field>
            <field name="model">sale.quote.section</field>
            <field name="arch" type="xml">
                <form string="Section" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>

                                <field name="name" style="width: 70%%"
                                       context="{'partner_id':parent.partner_id, 'pricelist':parent.pricelist_id, 'shop_id':parent.shop_id, 'date_order':parent.date_order, 'fiscal_position': parent.fiscal_position}"
                                       on_change="set_fields(context)"/>
                            </h1>
                            <field name="partner_id" invisible="1"/>
                            <field name="pricelist_id" invisible="1"/>
                            <field name="shop_id" invisible="1"/>
                            <field name="date_order" invisible="1"/>
                            <field name="fiscal_position" invisible="1"/>

                            <field name="order" invisible="1"/>
                        </div>
                        <div class="oe_clear">
                            <field name="header_text"
                                   placeholder="Place any header text here, it will appear above the quote lines"/>
                        </div>
                        <field name="order_lines">

                            <tree string="Sales Order Lines" editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="state" invisible="1" context="{'order_id': parent.order}" on_change="set_fields(context)"/>
                                <field name="th_weight" invisible="1"/>
                                <field name="order_id" invisible="1" />
                                <field name="product_id"
                                       context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'shop':parent.shop_id, 'uom':product_uom}"
                                       groups="base.group_user"
                                       on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, False, product_uos_qty, False, name, parent.partner_id, False, True, parent.date_order, False, parent.fiscal_position, False, context)"/>
                                <field name="name"/>
                                <field name="product_uom_qty"
                                       context="{'partner_id':parent.partner_id, 'quantity':product_uom_qty, 'pricelist':parent.pricelist_id, 'shop':parent.shop_id, 'uom':product_uom}"
                                       on_change="product_id_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, False, parent.fiscal_position, True, context)"/>
                                <field name="product_uom"
                                       on_change="product_uom_change(parent.pricelist_id, product_id, product_uom_qty, product_uom, product_uos_qty, product_uos, name, parent.partner_id, False, False, parent.date_order, context)"
                                       groups="product.group_uom" options='{"no_open": True}'/>
                                <field name="product_uos_qty" groups="product.group_uos" invisible="1"/>
                                <field name="product_uos" string="UoS" groups="product.group_uos" invisible="1"/>
                                <field name="tax_id" widget="many2many_tags"
                                       domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]"
                                       invisible="1"/>
                                <field name="price_unit" string="Price"/>
                                <field name="discount" groups="sale.group_discount_per_so_line"/>
                                <field name="price_subtotal"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            <div class="oe_subtotal_footer_separator oe_inline">
                                <label for="amount_subtotal" string="Calc"/>
                                <field name="calc"/>
                            </div>
                            <field name="amount_subtotal" nolabel="1" class="oe_subtotal_footer_separator"
                                   widget='monetary'/>
                        </group>
                        <div class="oe_clear"/>
                        <field name="footer_text" class="oe_inline" placeholder="Footer Text"/>

                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="layout_view_order_form_inherit">
            <field name="name">layout.view.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="attrs">{'invisible': [('use_sections', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="use_sections" attrs="{'invisible': [('quote', '=', False)]}"/>
                </xpath>
                <xpath expr="//page[@string='Order Lines']">
                    <field name="layouts" mode="kanban" attrs="{'invisible': [('use_sections', '=', False)]}"
                           context="{'form_view_ref': 'sale_quote_layout.layout_order_lines_form',
                       'pricelist_id': pricelist_id,
                       'shop': shop_id,
                       'partner_id': partner_id,
                       'date_order': date_order,
                       'fiscal_position': fiscal_position}">
                        <kanban>
                            <field name="name"/>
                            <field name="header_text"/>
                            <field name="sequence"/>
                            <field name="amount_subtotal"/>
                            <field name="section_total"/>
                            <field name="order"/>
                            <field name="order_lines"/>
                            <field name="footer_text"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div style="position: relative">
                                        <a t-if="! read_only_mode" type="delete"
                                           style="position: absolute; right: 0; padding: 4px; display: inline-block">X
                                        </a>
                                        <div class="oe_module_vignette">
                                            <div class="oe_module_desc">
                                                <div class="oe_kanban_box_content oe_kanban_color_bglight oe_kanban_color_border">
                                                    <table class="oe_kanban_table">
                                                        <tr>
                                                            <td class="oe_kanban_title1" align="left" valign="middle">
                                                                <h4>
                                                                    <a type="open">
                                                                        <field name="name"/>
                                                                    </a>
                                                                </h4>
                                                                <i>
                                                                    <div t-if="record.header_text.raw_value">
                                                                        <field name="header_text"/>
                                                                    </div>
                                                                </i>
                                                                <div t-if="record.amount_subtotal.raw_value">Subtotal: $
                                                                    <field name="amount_subtotal"/>
                                                                </div>
                                                                <i>
                                                                    <div t-if="record.footer_text.raw_value">
                                                                        <field name="footer_text"/>
                                                                    </div>
                                                                </i>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>

                    </field>
                </xpath>
            </field>
        </record>


    </data>
</openerp>
